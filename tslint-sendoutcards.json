{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-immutable",
    "tslint-config-prettier"
  ],
  "rulesDirectory": "./rules",
  "rules": {
    "no-native-set": true,
    // tslint-react
    "jsx-no-lambda": false,
    // Immutability rules
    "no-array-mutation": [
      true,
      "ignore-mutation-following-accessor",
      { "ignore-prefix": ["mutable"] }
    ],
    "no-let": [true, { "ignore-prefix": "mutable" }],
    "no-object-mutation": [
      true,
      { "ignore-prefix": ["mutable", "this", "document", "window"] }
    ],
    // TSlint rules
    "no-var-keyword": true,
    "no-parameter-reassignment": true,
    "typedef": false, // "typedef": [true, "parameter", "property-declaration","call-signature"]
    "array-type": false,
    "arrow-parens": false,
    "arrow-return-shorthand": [false],
    "ban-types": false, // to change
    "class-name": true,
    "comment-format": [true, "check-space"],
    "cyclomatic-complexity": true,
    "forin": false, // to change
    "import-blacklist": [true, "lodash", "material-ui"],
    "interface-over-type-literal": false,
    "interface-name": false,
    "max-classes-per-file": true,
    "member-access": false,
    "member-ordering": [true, { "order": "fields-first" }],
    "newline-before-return": false,
    "no-any": false,
    "no-console": false, // to change
    "no-duplicate-imports": [true, { "allow-namespace-imports": true }],
    "no-empty": false, // to remove
    "no-empty-interface": false,
    "no-import-side-effect": true,
    "no-inferrable-types": [true, "ignore-params", "ignore-properties"],
    "no-invalid-this": [true, "check-function-in-method"],
    "no-namespace": false, // to change
    "no-non-null-assertion": true,
    "no-null-keyword": false,
    "no-require-imports": false,
    "no-shadowed-variable": false,
    "no-submodule-imports": false, // [true, "@src", "rxjs", "soc-components"] fix this
    "no-this-assignment": [true, { "allow-destructuring": true }],
    "no-unused-expression": false, // to change
    "object-literal-sort-keys": false,
    "object-literal-shorthand": false,
    "one-variable-per-declaration": [false],
    "only-arrow-functions": [true, "allow-declarations"],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "any"
      }
    ],
    "prefer-const": true,
    "prefer-for-of": true,
    "prefer-method-signature": false,
    "prefer-template": [true, "allow-single-concat"],
    "triple-equals": false, // "triple-equals": [true, "allow-null-check"],
    "type-literal-delimiter": false, // true
    "unnecessary-bind": true,
    "variable-name": [
      false,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ], //true
    "no-restricted-globals": [
      true,
      "open",
      "close",
      "event",
      "error",
      "name",
      "length",
      "history"
    ]
  },
  "jsRules": {
    "no-console": true,
    "object-literal-sort-keys": true
  }
}
